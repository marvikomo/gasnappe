{% block script %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('#bname').hide();
            $('#name').show();
            $('#type').val(1);
            $(document).on('click', '#lawyer',function(){
                $('#bname').hide();
                $('.not_common').show();

                $('#type').val(1);

            });
            $(document).on('click', '#firm',function(){

                $('#bname').show();
                $('#name').hide();
                $('.not_common').hide();
                $('#type').val(2);

            });

        })
    </script>
{%  endblock %}