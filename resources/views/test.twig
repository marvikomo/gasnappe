                    {{ errors | json_encode }}
                    <form action="{{ path_for('submit') }}" method="post"  enctype="multipart/form-data">
                        {{ csrf.field | raw }}
                        <div class="form-group">

                            <label for="inputEmail4">Name</label>
                            <input type="text" name='name' class="form-control {{ errors.name ? 'is-invalid' : '' }}" id="inputEmail4" placeholder="Name">

                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Email</label>
                                <input type="email" name='email' class="form-control {{ errors.email ? 'is-invalid' : '' }}" id="inputEmail4" placeholder="">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Contact Phone</label>
                                <input type="text" name="contact_phone" class="form-control {{ errors.contact_phone ? 'is-invalid' : '' }}" id="inputPassword4" placeholder="">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Password</label>
                                <input type="password" name="password"  class="form-control {{ errors.password ? 'is-invalid' : '' }}" id="inputEmail4" placeholder="">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Confirm Password</label>
                                <input type="password" name="confirm_password" class="form-control {{ errors.confirm_password ? 'is-invalid' : '' }}" id="inputPassword4" placeholder="">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputAddress">Landmark</label>
                                <input type="text" class="form-control {{ errors.landmark ? 'is-invalid' : '' }}" name="landmark" id="inputAddress" placeholder="">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputAddress2">Call to Bar Enrollment Number</label>
                                <input type="number" class="form-control {{ errors.enrollment_no ? 'is-invalid' : '' }}" name='enrollment_no' id="inputAddress2" placeholder="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputState">What are you registering as</label>
                            <select id="inputState" class="form-control">
                                <option selected>Choose...</option>
                                <option>Individual</option>
                                <option>Firm</option>
                            </select>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputCity">Year of call</label>
                                <input type="date" name="year" class="form-control {{ errors.year ? 'is-invalid' : '' }}" id="inputCity">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputState">Specialty</label>
                                <select id="inputState" name="specialty" class="form-control {{ errors.specialty ? 'is-invalid' : '' }}">
                                    <option selected>Choose...</option>
                                    <option>Financial Lawyer</option>
                                    <option>Real Estate Lawyer</option>
                                </select>
                            </div>

                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputCity">Local Goverment Area/District/Country</label>
                                <input type="text" name="lga" class="form-control {{ errors.lga ? 'is-invalid' : '' }}" id="inputCity">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputCity">Upload Picture</label>
                                <input type="file" name="image" class="form-control {{ errors.image ? 'is-invalid' : '' }}" id="inputCity">
                            </div>



                        </div>
                        <div class="form-group">
                            <label for="inputState">Brief Profile</label>
                            <textarea name="profile" id="message" cols="30" rows="7" class="form-control {{ errors.profile ? 'is-invalid' : '' }}" placeholder="Write about yourself here..."></textarea>

                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="gridCheck">
                                <label class="form-check-label" for="gridCheck">
                                    Check me out
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Register</button>
                    </form>


                </div>

            </div>
        </div>
    </div>

{% endblock %}


